
<link rel="stylesheet" href="/css/user_sign_up.css">
<div id="sign-up-page">

<form action="/users/create " method="POST">
    <h2 id="heading">Sign up</h2>
    <p id="google-sign-up">
        <a href="/users/auth/google">  <img src="/images/unnamed.png" height="30" width="30" alt=""><span>Sign Up with Google</span> </a>
    </p>
    <input type="text" name="name" placeholder="Your name" required>
    <input type="email" name="email" placeholder="Your Email-id" required>
    <input type="password" name="password" placeholder="Password" required>
    <input type="password" name="confirm_password" placeholder="confirm_password" required>
    <input type="submit" value="Sign Up">


<p>
    <p id="already-account">
        <span>Already have an account?</span> 
        <a href="/users/sign-in">Log In</a>
        <p>
</p>
</form>
</div>